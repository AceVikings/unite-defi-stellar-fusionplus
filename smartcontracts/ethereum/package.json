{
  "name": "@unite-defi/ethereum-contracts",
  "version": "1.0.0",
  "description": "Ethereum HTLC smart contracts for cross-chain atomic swaps with Stellar",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy-local.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia",
    "test:deployment": "hardhat run scripts/test-deployment.ts",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "htlc",
    "atomic-swap",
    "cross-chain",
    "stellar",
    "defi"
  ],
  "author": "Unite DeFi Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "dotenv": "^17.2.1",
    "hardhat": "^2.26.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/unite-defi-stellar-fusionplus.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/unite-defi-stellar-fusionplus/issues"
  },
  "homepage": "https://github.com/your-org/unite-defi-stellar-fusionplus#readme"
}
