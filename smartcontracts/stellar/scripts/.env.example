# Environment Configuration for Stellar HTLC Deployment
# Copy this file to .env and fill in your values

# Stellar Network Configuration
STELLAR_SECRET_KEY=your_stellar_secret_key_here
STELLAR_HTLC_CONTRACT_ID=contract_id_after_deployment

# Fee Configuration
FEE_RECIPIENT=your_fee_recipient_address
PROTOCOL_FEE_BPS=30

# Ethereum Integration (for cross-chain swaps)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your-infura-key
ETHEREUM_HTLC_CONTRACT_ADDRESS=your_ethereum_contract_address
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key

# 1inch Fusion+ Integration
ONEINCH_API_KEY=your_1inch_api_key
RESOLVER_ENDPOINT=https://api.1inch.dev/fusion-plus

# Monitoring and Analytics
WEBHOOK_URL=your_monitoring_webhook_url
ANALYTICS_ENDPOINT=your_analytics_endpoint
